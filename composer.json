{
    "name": "grizz-it/ast",
    "description": "An abstraction layer for creating generated logic.",
    "keywords": [
        "generator",
        "files",
        "ast"
    ],
    "type": "library",
    "license": "MIT",
    "prefer-stable": true,
    "minimum-stability": "stable",
    "require": {
        "php": "^7.3"
    },
    "authors": [
        {
            "name": "Grizz-IT",
            "homepage": "https://www.grizz-it.com/",
            "role": "Developer"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "GrizzIt\\Ast\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GrizzIt\\Ast\\Tests\\": "tests/"
        }
    },
    "archive": {
        "exclude": [
            "/tests",
            "/.gitignore",
            "/.travis.yml",
            "/phpunit.xml",
            "/phpcs.xml",
            "/PULL_REQUEST_TEMPLATE.md",
            "/CODE_OF_CONDUCT.md",
            "/CONTRIBUTING.md"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^9.4",
        "squizlabs/php_codesniffer": "^3.5"
    }
}
